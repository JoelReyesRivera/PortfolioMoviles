<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/earth"
        android:layout_width="32dp"
        android:layout_height="45dp"
        android:layout_marginTop="156dp"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleRadius="110dp"
        app:layout_constraintEnd_toEndOf="@+id/sun"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sun"
        app:layout_constraintTop_toTopOf="@+id/sun"
        app:srcCompat="@drawable/ic_tierra" />

    <ImageView
        android:id="@+id/mars"
        android:layout_width="38dp"
        android:layout_height="54dp"
        android:layout_marginTop="212dp"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleRadius="145dp"
        app:layout_constraintEnd_toEndOf="@+id/sun"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sun"
        app:layout_constraintTop_toTopOf="@+id/sun"
        app:srcCompat="@drawable/ic_marte" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width="104dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sol" />

    <ImageView
        android:id="@+id/mercurio"
        android:layout_width="24dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/sun"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleRadius="45dp"
        app:layout_constraintEnd_toEndOf="@+id/sun"
        app:layout_constraintStart_toStartOf="@+id/sun"
        app:layout_constraintTop_toTopOf="@+id/sun"
        app:srcCompat="@drawable/ic_mercurio" />

    <ImageView
        android:id="@+id/venus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/sun"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleRadius="75dp"
        app:layout_constraintEnd_toEndOf="@+id/sun"
        app:layout_constraintStart_toStartOf="@+id/sun"
        app:layout_constraintTop_toTopOf="@+id/sun"
        app:srcCompat="@drawable/ic_venus" />

    <ImageView
        android:id="@+id/jupiter"
        android:layout_width="40dp"
        android:layout_height="81dp"
        app:layout_constraintBottom_toBottomOf="@+id/sun"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleRadius="185dp"
        app:layout_constraintEnd_toEndOf="@+id/sun"
        app:layout_constraintStart_toStartOf="@+id/sun"
        app:layout_constraintTop_toBottomOf="@+id/sun"
        app:srcCompat="@drawable/ic_jupiter" />

    <ImageView
        android:id="@+id/saturno"
        android:layout_width="33dp"
        android:layout_height="54dp"
        app:layout_constraintBottom_toBottomOf="@+id/sun"
        app:layout_constraintEnd_toEndOf="@+id/sun"
        app:layout_constraintStart_toStartOf="@+id/sun"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleRadius="222dp"
        app:layout_constraintTop_toTopOf="@+id/sun"
        app:srcCompat="@drawable/ic_saturno" />

    <ImageView
        android:id="@+id/urano"
        android:layout_width="37dp"
        android:layout_height="36dp"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleRadius="255dp"
        app:layout_constraintEnd_toEndOf="@+id/sun"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sun"
        app:layout_constraintTop_toTopOf="@+id/sun"
        app:srcCompat="@drawable/ic_urano" />

    <ImageView
        android:id="@+id/neptuno"
        android:layout_width="33dp"
        android:layout_height="37dp"
        app:srcCompat="@drawable/ic_neptuno"
        tools:layout_editor_absoluteX="191dp"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleRadius="290dp"
        app:layout_constraintEnd_toEndOf="@+id/sun"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sun"
        app:layout_constraintTop_toTopOf="@+id/sun"
        tools:layout_editor_absoluteY="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>